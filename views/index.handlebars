<form action="/" method="POST">
  <div class="container">
      <input type="url" name="url" placeholder="http://xxxx" required />
      <button class="shorten" type="submit">Transit</button>
    </div>
  </div>
</form>
{{#if shortURL}}
  <div class="result">
    <h3>Success! Please use this link</h3>
    <p id="generatedURL">{{origin}}/{{shortURL}}</p>
  </div>
  <button class="copy" onclick="copy()">Copy</button>
  <a href="/" class="back">Back</a>
  {{! copied }}
  <script>
    function copy() { const URL = document.getElementById("generatedURL")
    navigator.clipboard.writeText(URL.innerText) .then(() => alert('copied'))
    .catch(error => console.log(error)) }

  </script>
{{/if}}